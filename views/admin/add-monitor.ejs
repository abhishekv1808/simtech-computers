<%- include('../partials/head.ejs') %>

    <body class="bg-gray-50 text-gray-600">

        <!-- Top Navigation -->
        <nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-6">
                <div class="flex justify-between h-16">
                    <!-- Logo & Nav Links -->
                    <div class="flex items-center">
                        <a href="/admin/dashboard" class="flex items-center mr-10">
                            <img src="/images/RgComputers-logo.png" alt="RG Computers" class="h-10 object-contain">
                        </a>
                        <div class="hidden md:flex space-x-1">
                            <a href="/admin/dashboard"
                                class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md">Dashboard</a>
                            <a href="/admin/inventory"
                                class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md">Inventory</a>
                        </div>
                    </div>

                    <!-- Right Side Actions -->
                    <div class="flex items-center space-x-4">
                        <button class="text-gray-400 hover:text-gray-500">
                            <i class="far fa-bell text-lg"></i>
                        </button>
                        <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
                            <div class="text-right hidden sm:block">
                                <p class="text-sm font-semibold text-gray-900">Admin User</p>
                                <p class="text-xs text-gray-500">Manager</p>
                            </div>
                            <div
                                class="h-9 w-9 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-bold border border-blue-200">
                                A
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="max-w-4xl mx-auto px-6 py-8">

            <!-- Breadcrumb & Title -->
            <div class="mb-8 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <a href="<%= editing ? '/admin/inventory' : '/admin/dashboard' %>"
                        class="text-sm text-gray-500 hover:text-blue-600 mb-2 inline-flex items-center transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i> Back to <%= editing ? 'Inventory' : 'Dashboard' %>
                    </a>
                    <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
                        <%= editing ? 'Edit Monitor' : 'Add New Monitor' %>
                    </h1>
                    <p class="text-gray-500 mt-1">Fill in the details below to <%= editing ? 'update the monitor in'
                            : 'add a new monitor to' %> your catalog.</p>
                </div>
                <% if (editing) { %>
                    <div
                        class="px-4 py-2 bg-blue-50 text-blue-700 rounded-lg text-sm font-medium border border-blue-100">
                        Editing SKU: <span class="font-mono ml-1 text-blue-800">
                            <%= monitor._id %>
                        </span>
                    </div>
                    <% } %>
            </div>

            <form action="/admin/<%= editing ? 'edit-monitor' : 'add-monitor' %>" method="POST"
                enctype="multipart/form-data" class="space-y-8 pb-12">

                <!-- Main Info Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="p-6 border-b border-gray-50 bg-gray-50/50 flex items-center gap-3">
                        <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
                            <i class="fas fa-desktop text-xs"></i>
                        </div>

                        <h3 class="text-lg font-bold text-gray-900">Basic Information</h3>
                    </div>

                    <div class="p-6 space-y-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div class="group">
                                <label
                                    class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors"
                                    for="brand">Brand</label>
                                <div class="relative">
                                    <select
                                        class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all bg-white appearance-none cursor-pointer hover:border-blue-300"
                                        id="brand" name="brand" required>
                                        <option value="" disabled <%=!editing ? 'selected' : '' %>>Select Brand</option>
                                        <% const brands=['Dell', 'HP' , 'Lenovo' , 'BenQ' , 'LG' , 'Samsung' , 'Acer' ];
                                            %>
                                            <% brands.forEach(brand=> { %>
                                                <option value="<%= brand %>" <%=editing && monitor.brand===brand
                                                    ? 'selected' : '' %>><%= brand %>
                                                </option>
                                                <% }) %>
                                    </select>
                                    <div
                                        class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none text-gray-400">
                                        <i class="fas fa-chevron-down text-xs"></i>
                                    </div>
                                </div>
                            </div>

                            <!-- Hidden Category locked to Monitor -->
                            <input type="hidden" name="category" value="Monitor">

                            <div class="group">
                                <label
                                    class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors"
                                    for="model">Model Name</label>
                                <input
                                    class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all placeholder-gray-400"
                                    id="model" type="text" name="model" value="<%= editing ? monitor.model : '' %>"
                                    placeholder="e.g. UltraSharp U2723QE" required>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div class="group">
                                <label
                                    class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors"
                                    for="mrp">MRP</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <span class="text-gray-400 font-medium">&#8377;</span>
                                    </div>
                                    <input
                                        class="w-full pl-8 pr-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all font-medium text-gray-900"
                                        id="mrp" type="number" step="0.01" name="mrp"
                                        value="<%= editing ? monitor.mrp : '' %>" placeholder="0.00" required>
                                </div>
                                <p class="text-xs text-gray-400 mt-1">Official market price</p>
                            </div>
                            <div class="group">
                                <label
                                    class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors"
                                    for="price">Our Price</label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <span class="text-gray-400 font-medium">&#8377;</span>
                                    </div>
                                    <input
                                        class="w-full pl-8 pr-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all font-bold text-gray-900"
                                        id="price" type="number" step="0.01" name="price"
                                        value="<%= editing ? monitor.price : '' %>" placeholder="0.00" required>
                                </div>
                                <p class="text-xs text-blue-500 mt-1 font-medium">Selling price</p>
                            </div>
                        </div>

                        <div class="group">
                            <label class="block text-sm font-bold text-gray-700 mb-3" for="images">Product
                                Gallery</label>

                            <!-- Enhanced File Upload Zone -->
                            <div class="mb-6">
                                <label id="drop-zone"
                                    class="group flex flex-col items-center justify-center w-full h-48 px-6 transition-all bg-gray-50 border-2 border-gray-300 border-dashed rounded-2xl cursor-pointer hover:bg-blue-50/50 hover:border-blue-500 hover:scale-[1.005] active:scale-[0.995]">
                                    <div
                                        class="flex flex-col items-center justify-center pt-5 pb-6 text-center pointer-events-none">
                                        <div
                                            class="w-16 h-16 mb-4 rounded-full bg-blue-100 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                                            <i class="fas fa-cloud-upload-alt text-3xl text-blue-600"></i>
                                        </div>
                                        <p class="mb-2 text-sm text-gray-600">
                                            <span class="font-bold text-blue-600 hover:underline">Click to upload</span>
                                            or drag and drop
                                        </p>
                                        <p class="text-xs text-gray-400">SVG, PNG, JPG or WEBP (MAX. 5 files)</p>
                                    </div>
                                    <input type="file" name="images" id="file-input" class="hidden" multiple
                                        accept="image/*" onchange="previewImages(event)">
                                </label>
                            </div>


                            <!-- Preview Container for New Uploads -->
                            <div id="new-images-preview"
                                class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6 empty:hidden"></div>

                            <!-- Existing Images (Edit Mode) -->
                            <% if (editing) { let existingUrls=[]; if (monitor.imageUrls && monitor.imageUrls.length> 0)
                                {
                                existingUrls = monitor.imageUrls;
                                } else if (monitor.imageUrl) {
                                existingUrls = [monitor.imageUrl];
                                }
                                %>
                                <% if (existingUrls.length> 0) { %>
                                    <div class="space-y-3">
                                        <div class="flex items-center justify-between border-b border-gray-100 pb-2">
                                            <label
                                                class="text-xs font-bold text-gray-400 uppercase tracking-wider">Current
                                                Gallery</label>
                                            <span class="text-xs text-gray-400">
                                                <%= existingUrls.length %> images
                                            </span>
                                        </div>
                                        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4"
                                            id="existing-images-container">
                                            <% existingUrls.forEach((url, index)=> { %>
                                                <div
                                                    class="relative group aspect-[4/3] bg-white rounded-xl overflow-hidden border border-gray-200 shadow-sm hover:shadow-md transition-all">
                                                    <img src="<%= url %>"
                                                        class="w-full h-full object-contain p-2 transition-transform duration-500 group-hover:scale-105">
                                                    <input type="hidden" name="existingImages" value="<%= url %>">

                                                    <!-- Overlay Actions -->
                                                    <div
                                                        class="absolute inset-x-0 bottom-0 p-2 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex justify-end">
                                                        <button type="button"
                                                            onclick="this.closest('.relative').remove()"
                                                            class="bg-red-500 hover:bg-red-600 text-white p-2 rounded-lg shadow-sm transition-colors transform hover:scale-105 active:scale-95"
                                                            title="Remove Image">
                                                            <i class="fas fa-trash-alt text-xs"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>
                        </div>


                        <div class="group">
                            <label
                                class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors"
                                for="description">Product Description</label>
                            <textarea
                                class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all leading-relaxed placeholder-gray-400 shadow-sm"
                                id="description" name="description" rows="4"
                                placeholder="Write a detailed description highlighting key features..."
                                required><%= editing ? monitor.description : '' %></textarea>
                        </div>
                    </div>
                </div>

                <!-- Inventory Details Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="p-6 border-b border-gray-50 bg-gray-50/50 flex items-center gap-3">
                        <div class="h-8 w-8 rounded-full bg-cyan-100 flex items-center justify-center text-cyan-600">
                            <i class="fas fa-boxes text-xs"></i>
                        </div>
                        <h3 class="text-lg font-bold text-gray-900">Inventory Status</h3>
                    </div>

                    <div class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div class="group">
                                <label
                                    class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors"
                                    for="stockQuantity">Stock Quantity</label>
                                <input
                                    class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all font-mono"
                                    id="stockQuantity" type="number" name="stockQuantity"
                                    value="<%= editing ? monitor.stockQuantity : '0' %>" min="0" required>
                            </div>
                            <div class="group">
                                <label
                                    class="block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors"
                                    for="status">Availability Status</label>
                                <div class="relative">
                                    <select
                                        class="w-full px-4 py-3 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all bg-white appearance-none cursor-pointer"
                                        id="status" name="status" required>
                                        <option value="In Stock" <%=editing && monitor.status==='In Stock' ? 'selected'
                                            : '' %>>In Stock</option>
                                        <option value="Low Stock" <%=editing && monitor.status==='Low Stock'
                                            ? 'selected' : '' %>>Low Stock</option>
                                        <option value="Out of Stock" <%=editing && monitor.status==='Out of Stock'
                                            ? 'selected' : '' %>>Out of Stock</option>
                                        <option value="Discontinued" <%=editing && monitor.status==='Discontinued'
                                            ? 'selected' : '' %>>Discontinued</option>
                                    </select>
                                    <div
                                        class="absolute inset-y-0 right-0 flex items-center px-4 pointer-events-none text-gray-400">
                                        <i class="fas fa-chevron-down text-xs"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Specs Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="p-6 border-b border-gray-50 bg-gray-50/50 flex items-center gap-3">
                        <div
                            class="h-8 w-8 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600">
                            <i class="fas fa-desktop text-xs"></i>
                        </div>
                        <h3 class="text-lg font-bold text-gray-900">Display Specifications</h3>
                    </div>

                    <div class="p-6">
                        <div class="grid grid-cols-1 gap-x-8 gap-y-6">
                            <div class="group">
                                <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2 pl-1"
                                    for="display">Display Details</label>
                                <input
                                    class="w-full px-4 py-2.5 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all bg-gray-50 hover:bg-white focus:bg-white"
                                    id="display" type="text" name="display"
                                    value="<%= editing ? monitor.specifications.display : '' %>"
                                    placeholder="e.g. 27-inch 4K UHD (3840 x 2160) IPS, 60Hz, 5ms" required>
                            </div>
                            <!-- OS Optional, maybe hidden or removed if not needed for monitor -->
                            <div class="group">
                                <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2 pl-1"
                                    for="os">Smart Features / OS (Optional)</label>
                                <input
                                    class="w-full px-4 py-2.5 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all bg-gray-50 hover:bg-white focus:bg-white"
                                    id="os" type="text" name="os"
                                    value="<%= editing ? monitor.specifications.os : '' %>"
                                    placeholder="e.g. Tizen, WebOS or 'N/A'">
                            </div>
                        </div>
                    </div>
                </div>

                <% if (editing) { %>
                    <input type="hidden" name="monitorId" value="<%= monitor._id %>">
                    <% } %>

                        <div class="flex items-center justify-end gap-3 pt-4">
                            <a href="/admin/inventory"
                                class="px-6 py-3 border border-gray-300 rounded-xl text-sm font-semibold text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 transition-colors">
                                Cancel
                            </a>
                            <button type="submit"
                                class="px-6 py-3 bg-blue-600 border border-transparent rounded-xl text-sm font-semibold text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-lg shadow-blue-200 transition-all flex items-center">
                                <i class="fas fa-save mr-2"></i>
                                <%= editing ? 'Update Monitor' : 'Add Monitor' %>
                            </button>
                        </div>
            </form>
        </div>

        <!-- Script same as laptop -->
        <script>
            const dropZone = document.getElementById('drop-zone');
            const fileInput = document.getElementById('file-input');
            let allFiles = new DataTransfer();

            // Prevent default drag behaviors
            if (dropZone) {
                ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                    dropZone.addEventListener(eventName, preventDefaults, false);
                    document.body.addEventListener(eventName, preventDefaults, false);
                });

                function preventDefaults(e) {
                    e.preventDefault();
                    e.stopPropagation();
                }

                // Highlight drop zone when item is dragged over it
                ['dragenter', 'dragover'].forEach(eventName => {
                    dropZone.addEventListener(eventName, highlight, false);
                });

                ['dragleave', 'drop'].forEach(eventName => {
                    dropZone.addEventListener(eventName, unhighlight, false);
                });

                function highlight(e) {
                    dropZone.classList.add('border-blue-500', 'bg-blue-50');
                }

                function unhighlight(e) {
                    dropZone.classList.remove('border-blue-500', 'bg-blue-50');
                }

                // Handle dropped files
                dropZone.addEventListener('drop', handleDrop, false);

                function handleDrop(e) {
                    const dt = e.dataTransfer;
                    handleFiles(dt.files);
                }
            }

            function handleFiles(files) {
                if (files.length > 0) {
                    Array.from(files).forEach(file => {
                        // Dedupe based on name and size
                        const exists = Array.from(allFiles.files).some(f => f.name === file.name && f.size === file.size);
                        if (!exists) {
                            allFiles.items.add(file);
                        }
                    });
                    fileInput.files = allFiles.files;
                    generatePreview();
                }
            }

            function previewImages(event) {
                const files = event.target.files;
                handleFiles(files);
            }

            function generatePreview() {
                const previewContainer = document.getElementById('new-images-preview');
                previewContainer.innerHTML = '';
                const files = allFiles.files;

                if (files && files.length > 0) {
                    const header = document.createElement('div');
                    header.className = 'col-span-full flex items-center justify-between pb-2 border-b border-gray-100';

                    // Fixed template literals
                    header.innerHTML = `
                    <label class="text-xs font-bold text-blue-600 uppercase tracking-wider">Ready to Upload</label>
                    <div class="flex items-center gap-2">
                         <span class="text-xs text-blue-600 font-medium">${files.length} new files</span>
                         <button type="button" onclick="clearAllNewFiles()" class="text-[10px] text-red-500 hover:text-red-700 font-bold uppercase">Clear All</button>
                    </div>
                `;
                    previewContainer.appendChild(header);

                    Array.from(files).forEach((file, index) => {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            const div = document.createElement('div');
                            div.className = 'relative aspect-[4/3] bg-white rounded-xl overflow-hidden border-2 border-blue-100 shadow-lg shadow-blue-50/50 group';
                            div.innerHTML = `
                            <img src="${e.target.result}" class="w-full h-full object-contain p-2">
                             <button type="button" onclick="removeNewFile(${index})" class="absolute top-2 left-2 bg-red-500 text-white rounded-full p-1.5 shadow-sm hover:bg-red-600 focus:outline-none transition-colors" title="Remove">
                                <i class="fas fa-times text-xs w-3 h-3 flex items-center justify-center"></i>
                            </button>
                            <div class="absolute inset-x-0 bottom-0 bg-blue-600/90 backdrop-blur-sm p-2 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                                <p class="text-[10px] text-white truncate font-medium">${file.name}</p>
                            </div>
                        `;
                            previewContainer.appendChild(div);
                        }
                        reader.readAsDataURL(file);
                    });
                }
            }

            // Renamed to match the usage in preview HTML
            function removeNewFile(index) {
                const dt = new DataTransfer();
                const files = allFiles.files;
                for (let i = 0; i < files.length; i++) {
                    if (i !== index) dt.items.add(files[i]);
                }
                allFiles = dt;
                fileInput.files = allFiles.files;
                generatePreview();
            }

            function clearAllNewFiles() {
                allFiles = new DataTransfer();
                fileInput.files = allFiles.files;
                generatePreview();
            }
        </script>
    </body>