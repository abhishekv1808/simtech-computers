<%- include('../partials/head.ejs') %>
<body class="bg-gray-50 font-sans text-gray-600">
    
    <!-- Top Navigation -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-6">
            <div class="flex justify-between h-16">
                <!-- Logo & Nav Links -->
                <div class="flex items-center">
                    <a href="/admin/dashboard" class="flex items-center text-blue-600 text-xl font-extrabold tracking-tight mr-10">
                        <i class="fas fa-microchip mr-2"></i> SimTech
                    </a>
                    <div class="hidden md:flex space-x-1">
                        <a href="/admin/dashboard" class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md">Dashboard</a>
                        <a href="/admin/inventory" class="px-3 py-2 text-sm font-medium text-gray-900 bg-gray-100 rounded-md">Inventory</a>
                        <a href="#" class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md">Orders</a>
                        <a href="#" class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md">Customers</a>
                    </div>
                </div>

                <!-- Right Side Actions -->
                <div class="flex items-center space-x-4">
                    <button class="text-gray-400 hover:text-gray-500">
                        <i class="far fa-bell text-lg"></i>
                    </button>
                    <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
                        <div class="text-right hidden sm:block">
                            <p class="text-sm font-semibold text-gray-900">Admin User</p>
                            <p class="text-xs text-gray-500">Manager</p>
                        </div>
                        <div class="h-9 w-9 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-bold border border-blue-200">
                            A
                        </div>
                        <form action="/admin/logout" method="POST">
                            <button type="submit" class="text-gray-400 hover:text-red-500 ml-2" title="Logout">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-6 py-8">
        
        <!-- Page Header -->
        <div class="mb-8">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Inventory Management</h1>
                    <p class="text-sm text-gray-500 mt-1">Manage your product stock levels and catalog.</p>
                </div>
                <a href="/admin/add-laptop" class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition-all shadow-blue-200">
                    <i class="fas fa-plus mr-2"></i> Add Product
                </a>
            </div>
        </div>

        <!-- Inventory Table -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="p-5 border-b border-gray-100 flex flex-col sm:flex-row sm:items-center justify-between gap-4 bg-gray-50/30">
                <div class="flex items-center gap-2">
                    <h2 class="text-base font-semibold text-gray-900">Products</h2>
                    <span class="px-2.5 py-0.5 rounded-full bg-blue-50 text-blue-600 text-xs font-medium"><%= laptops.length %> Total</span>
                </div>
                <div class="flex gap-3 w-full sm:w-auto">
                    <div class="relative w-full sm:w-64">
                         <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-400 text-xs"></i>
                        </div>
                        <input type="text" placeholder="Search by name, SKU..." class="pl-9 pr-4 py-2 border border-gray-200 rounded-lg text-sm bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent w-full transition-all shadow-sm">
                    </div>
                    <button class="px-3 py-2 border border-gray-200 rounded-lg text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors">
                        <i class="fas fa-filter"></i>
                    </button>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full whitespace-nowrap text-left">
                    <thead>
                        <tr class="bg-gray-50/50 border-b border-gray-100">
                            <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">Product Info</th>
                            <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider w-40">Stock</th>
                            <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider w-48">Availability</th>
                            <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider text-right w-32">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        <% if (laptops.length > 0) { %>
                            <% laptops.forEach(laptop => { %>
                            <tr class="group hover:bg-gray-50/50 transition-colors">
                                <td class="px-6 py-3">
                                    <div class="flex items-center">
                                        <div class="h-12 w-12 flex-shrink-0 relative">
                                            <% const displayImage = (laptop.imageUrls && laptop.imageUrls.length > 0) ? laptop.imageUrls[0] : (laptop.imageUrl || 'https://via.placeholder.com/150'); %>
                                            <img class="h-12 w-12 rounded-lg object-contain border border-gray-200 bg-white p-1" src="<%= displayImage %>" alt="">
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors"><%= laptop.brand %> <%= laptop.model %></div>
                                            <div class="flex items-center gap-2 mt-1">
                                                <% if (laptop.category) { %>
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                                                        <%= laptop.category %>
                                                    </span>
                                                <% } %>
                                                <div class="text-xs text-gray-500 font-mono"><%= laptop._id %></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                
                                <!-- Editable Form Row -->
                                <form action="/admin/update-inventory" method="POST">
                                    <input type="hidden" name="laptopId" value="<%= laptop._id %>">
                                    
                                    <td class="px-6 py-3">
                                        <div class="flex items-center gap-2">
                                            <input type="number" name="stockQuantity" value="<%= laptop.stockQuantity %>" min="0" 
                                               class="w-20 px-2 py-1.5 border border-gray-200 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-shadow">
                                        </div>
                                    </td>
                                    
                                    <td class="px-6 py-3">
                                        <select name="status" class="w-full px-2 py-1.5 border border-gray-200 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white cursor-pointer hover:border-blue-300 transition-colors">
                                            <option value="In Stock" <%= laptop.status === 'In Stock' ? 'selected' : '' %>>In Stock</option>
                                            <option value="Low Stock" <%= laptop.status === 'Low Stock' ? 'selected' : '' %>>Low Stock</option>
                                            <option value="Out of Stock" <%= laptop.status === 'Out of Stock' ? 'selected' : '' %>>Out of Stock</option>
                                            <option value="Discontinued" <%= laptop.status === 'Discontinued' ? 'selected' : '' %>>Discontinued</option>
                                        </select>
                                    </td>

                                    <td class="px-6 py-3 text-right">
                                        <div class="flex items-center justify-end gap-2">
                                            <!-- View -->
                                            <button type="button" data-laptop="<%= JSON.stringify(laptop) %>" onclick="openModal(this)" class="h-8 w-8 flex items-center justify-center text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg border border-transparent hover:border-indigo-100 transition-all" title="Quick View">
                                                <i class="fas fa-eye text-sm"></i>
                                            </button>
                                            
                                            <!-- Edit -->
                                            <a href="/admin/edit-laptop/<%= laptop._id %>?edit=true" class="h-8 w-8 flex items-center justify-center text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg border border-transparent hover:border-blue-100 transition-all" title="Edit Product">
                                                <i class="fas fa-pen text-xs"></i>
                                            </a>

                                            <!-- Update Button (Icon) -->
                                            <button type="submit" formaction="/admin/update-inventory" class="h-8 w-8 flex items-center justify-center text-emerald-600 bg-emerald-50 hover:bg-emerald-100 hover:text-emerald-700 rounded-lg border border-emerald-200 transition-all shadow-sm" title="Save Stock Changes">
                                                <i class="fas fa-check text-sm font-bold"></i>
                                            </button>

                                            <!-- Delete -->
                                            <button type="submit" formaction="/admin/delete-laptop" onclick="return confirm('Are you sure you want to delete this laptop? This action cannot be undone.')" class="h-8 w-8 flex items-center justify-center text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg border border-transparent hover:border-red-100 transition-all" title="Delete Product">
                                                <i class="fas fa-trash text-xs"></i>
                                            </button>
                                        </div>
                                    </td>
                                </form>
                            </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="px-6 py-24 text-center">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="h-16 w-16 bg-gray-50 rounded-full flex items-center justify-center border border-gray-100 mb-4">
                                            <i class="fas fa-box-open text-gray-300 text-2xl"></i>
                                        </div>
                                        <h3 class="text-sm font-medium text-gray-900">No products found</h3>
                                        <p class="text-xs text-gray-500 mt-1 max-w-xs mx-auto">Get started by adding a new product to your inventory.</p>
                                        <a href="/admin/add-laptop" class="mt-4 text-sm text-blue-600 hover:text-blue-800 font-medium">Add Product</a>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <% if (laptops.length > 0) { %>
            <div class="px-6 py-4 border-t border-gray-100 bg-gray-50 flex items-center justify-between">
                <p class="text-xs text-gray-500">
                    <i class="fas fa-info-circle mr-1 text-blue-500"></i>
                    Changes to stock or status must be saved by clicking the checkmark icon.
                </p>
                <div class="text-xs text-gray-400">
                    Showing all <%= laptops.length %> items
                </div>
            </div>
            <% } %>
        </div>

    </div>

    <%- include('./inventory-modal.ejs') %>
</body>
</html>
