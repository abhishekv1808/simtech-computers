        <!-- Script for Image Preview and Drag & Drop -->
        <script>
            // Setup Drag and Drop
            const dropZone = document.getElementById('drop-zone');
            const fileInput = document.getElementById('file-input');

            // Setup a DataTransfer object to hold all files
            let allFiles = new DataTransfer();

            if (dropZone) {
                ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                    dropZone.addEventListener(eventName, preventDefaults, false);
                });

                function preventDefaults(e) {
                    e.preventDefault();
                    e.stopPropagation();
                }

                ['dragenter', 'dragover'].forEach(eventName => {
                    dropZone.addEventListener(eventName, highlight, false);
                });

                ['dragleave', 'drop'].forEach(eventName => {
                    dropZone.addEventListener(eventName, unhighlight, false);
                });

                function highlight(e) {
                    dropZone.classList.add('border-blue-500', 'bg-blue-50');
                }

                function unhighlight(e) {
                    dropZone.classList.remove('border-blue-500', 'bg-blue-50');
                }

                dropZone.addEventListener('drop', handleDrop, false);

                function handleDrop(e) {
                    const dt = e.dataTransfer;
                    const files = dt.files;
                    handleFiles(files);
                }
            }

            function handleFiles(files) {
                if (files.length > 0) {
                    // Add new files to our DataTransfer object
                    Array.from(files).forEach(file => allFiles.items.add(file));

                    // Update the actual input's files
                    fileInput.files = allFiles.files;

                    // Update Preview
                    generatePreview();
                }
            }

            // Handle normal click selection
            function previewImages(event) {
                const files = event.target.files;
                // Since onchange overwrites the input.files, we need to merge if we want accumulation,
                // BUT standard file input behavior is replacement. 
                // If the user wants accumulation via click, we need to intercept.
                // However, typical behavior for "browse" is replace or add-to depends on UI.
                // Let's adopt an "accumulate" strategy for better UX.

                // NOTE: The file input 'change' event fires AFTER the files property is updated.
                // So 'event.target.files' contains ONLY the deeply selected files.

                // To fix "1 single image it will take... previous one is not there":
                // We must append the NEW files to our `allFiles` store.

                if (files.length > 0) {
                    Array.from(files).forEach(file => allFiles.items.add(file));
                    fileInput.files = allFiles.files; // Sync back to input
                    generatePreview();
                }
            }

            function generatePreview() {
                const previewContainer = document.getElementById('new-images-preview');
                previewContainer.innerHTML = ''; // Clear previous preview
                const files = allFiles.files; // Use accumulated files

                if (files && files.length > 0) {

                    // Add header
                    const header = document.createElement('div');
                    header.className = 'col-span-full flex items-center justify-between pb-2 border-b border-gray-100';
                    header.innerHTML = `
                    <label class="text-xs font-bold text-blue-600 uppercase tracking-wider">Ready to Upload</label>
                    <div class="flex items-center gap-2">
                         <span class="text-xs text-blue-600 font-medium">${files.length} new files</span>
                         <button type="button" onclick="clearAllNewFiles()" class="text-[10px] text-red-500 hover:text-red-700 font-bold uppercase">Clear All</button>
                    </div>
                `;
                    previewContainer.appendChild(header);

                    Array.from(files).forEach((file, index) => {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            const div = document.createElement('div');
                            div.style.animationDelay = `${index * 50}ms`;
                            div.className = 'relative aspect-[4/3] bg-white rounded-xl overflow-hidden border-2 border-blue-100 shadow-lg shadow-blue-50/50 animate-pop-in group';
                            div.innerHTML = `
                            <img src="${e.target.result}" class="w-full h-full object-contain p-2">
                            
                            <!-- Badges -->
                            <div class="absolute top-2 right-2 flex flex-col gap-1 items-end">
                                <span class="bg-blue-600 text-white text-[10px] font-bold px-2 py-0.5 rounded-full shadow-sm">New</span>
                            </div>

                            <!-- Remove Button -->
                             <button type="button" onclick="removeNewFile(${index})" class="absolute top-2 left-2 bg-red-500 text-white rounded-full p-1.5 shadow-sm hover:bg-red-600 focus:outline-none transition-colors transform hover:scale-110 z-10" title="Remove">
                                <i class="fas fa-times text-xs w-3 h-3 flex items-center justify-center"></i>
                            </button>

                            <!-- File Info Overlay -->
                            <div class="absolute inset-x-0 bottom-0 bg-blue-600/90 backdrop-blur-sm p-2 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                                <p class="text-[10px] text-white truncate font-medium">${file.name}</p>
                                <p class="text-[8px] text-blue-100">${(file.size / 1024 / 1024).toFixed(2)} MB</p>
                            </div>
                        `;
                            previewContainer.appendChild(div);
                        }
                        reader.readAsDataURL(file);
                    });
                }
            }

            function removeNewFile(index) {
                const dt = new DataTransfer();
                const files = allFiles.files;

                for (let i = 0; i < files.length; i++) {
                    if (i !== index) {
                        dt.items.add(files[i]);
                    }
                }
                allFiles = dt;
                fileInput.files = allFiles.files;
                generatePreview();
            }

            function clearAllNewFiles() {
                allFiles = new DataTransfer();
                fileInput.files = allFiles.files;
                generatePreview();
            }
        </script>

