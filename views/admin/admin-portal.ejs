<%- include('../partials/head.ejs') %>

    <body class="bg-gray-50 text-gray-600">

        <!-- Top Navigation -->
        <nav class="bg-white border-b border-gray-200 sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-6">
                <div class="flex justify-between h-16">
                    <!-- Logo & Nav Links -->
                    <div class="flex items-center">
                        <a href="/admin/dashboard" class="flex items-center mr-10">
                            <img src="/images/RgComputers-logo.png" alt="RG Computers" class="h-10 object-contain">
                        </a>
                        <div class="hidden md:flex space-x-1">
                            <a href="/admin/dashboard"
                                class="px-3 py-2 text-sm font-medium text-gray-900 bg-gray-100 rounded-md">Dashboard</a>
                            <a href="/admin/inventory"
                                class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md">Inventory</a>
                            <a href="#"
                                class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md">Orders</a>
                            <a href="#"
                                class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-900 hover:bg-gray-50 rounded-md">Customers</a>
                        </div>
                    </div>

                    <!-- Right Side Actions -->
                    <div class="flex items-center space-x-4">
                        <button class="text-gray-400 hover:text-gray-500">
                            <i class="far fa-bell text-lg"></i>
                        </button>
                        <div class="flex items-center gap-3 pl-4 border-l border-gray-200">
                            <div class="text-right hidden sm:block">
                                <p class="text-sm font-semibold text-gray-900">Admin User</p>
                                <p class="text-xs text-gray-500">Manager</p>
                            </div>
                            <div
                                class="h-9 w-9 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-bold border border-blue-200">
                                A
                            </div>
                            <form action="/admin/logout" method="POST">
                                <button type="submit" class="text-gray-400 hover:text-red-500 ml-2" title="Logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="max-w-7xl mx-auto px-6 py-8">

            <!-- Page Header -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8 gap-4">
                <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
                <div class="flex gap-4">
                    <a href="/admin/add-monitor"
                        class="inline-flex items-center justify-center px-5 py-2.5 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        <i class="fas fa-desktop mr-2"></i> New Monitor
                    </a>
                    <a href="/admin/add-laptop"
                        class="inline-flex items-center justify-center px-5 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                        <i class="fas fa-plus mr-2"></i> New Laptop
                    </a>
                </div>
            </div>

            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <!-- Active/Total Card -->
                <div
                    class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 relative overflow-hidden group hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Total Laptops</p>
                            <h3 class="text-2xl font-bold text-gray-900 mt-2">
                                <%= totalLaptops %>
                            </h3>
                        </div>
                        <div class="p-2 bg-green-50 rounded-lg text-green-600">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-xs text-gray-500">
                        <span class="text-green-600 font-medium flex items-center mr-2">
                            <i class="fas fa-arrow-up mr-1"></i> Active
                        </span>
                        <span>In Inventory</span>
                    </div>
                </div>

                <!-- Value Card -->
                <div
                    class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 relative overflow-hidden group hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Inventory Value</p>
                            <h3 class="text-2xl font-bold text-gray-900 mt-2">&#8377;<%=
                                    totalValue.toLocaleString('en-IN') %>
                            </h3>
                        </div>
                        <div class="p-2 bg-red-50 rounded-lg text-red-600">
                            <i class="fas fa-rupee-sign"></i>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-xs text-gray-500">
                        <span class="text-red-600 font-medium flex items-center mr-2">
                            <i class="fas fa-chart-line mr-1"></i> Est.
                        </span>
                        <span>Total Market Price</span>
                    </div>
                </div>

                <!-- Brands Card -->
                <div
                    class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 relative overflow-hidden group hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Unique Brands</p>
                            <h3 class="text-2xl font-bold text-gray-900 mt-2">
                                <%= uniqueBrands %>
                            </h3>
                        </div>
                        <div class="p-2 bg-orange-50 rounded-lg text-orange-600">
                            <i class="fas fa-tag"></i>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-xs text-gray-500">
                        <span class="text-orange-600 font-medium flex items-center mr-2">
                            <i class="fas fa-exclamation-circle mr-1"></i> Diverse
                        </span>
                        <span>Manufacturers</span>
                    </div>
                </div>

                <!-- Recent Card -->
                <div
                    class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 relative overflow-hidden group hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Recently Added</p>
                            <h3 class="text-2xl font-bold text-gray-900 mt-2">
                                <%= recentLaptops.length %>
                            </h3>
                        </div>
                        <div class="p-2 bg-gray-50 rounded-lg text-gray-600">
                            <i class="fas fa-history"></i>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-xs text-gray-500">
                        <span class="text-gray-600 font-medium flex items-center mr-2">
                            <i class="fas fa-plus mr-1"></i> New
                        </span>
                        <span>Items displayed</span>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                <!-- Left Column: Main Inventory Table -->
                <div class="lg:col-span-2 bg-white rounded-2xl shadow-sm border border-gray-100 flex flex-col">

                    <!-- Table Header/Filters -->
                    <div
                        class="p-6 border-b border-gray-100 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                        <h2 class="text-lg font-bold text-gray-900">Laptop Inventory</h2>
                        <div class="flex gap-2">
                            <div class="relative">
                                <input type="text" placeholder="Search..."
                                    class="pl-9 pr-4 py-2 border border-gray-200 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-full sm:w-64">
                                <i class="fas fa-search absolute left-3 top-2.5 text-gray-400 text-xs"></i>
                            </div>
                            <button
                                class="px-3 py-2 border border-gray-200 rounded-lg text-gray-600 hover:bg-gray-50 text-sm">
                                <i class="fas fa-filter"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Table Content -->
                    <div class="overflow-x-auto">
                        <table class="w-full whitespace-nowrap text-left">
                            <thead class="bg-gray-50/50">
                                <tr>
                                    <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                                        Product</th>
                                    <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                                        Price</th>
                                    <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                                        Specs</th>
                                    <th class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                                        Status</th>
                                    <th
                                        class="px-6 py-4 text-xs font-semibold text-gray-500 uppercase tracking-wider text-right">
                                        Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                                <% if (laptops.length> 0) { %>
                                    <% laptops.forEach(laptop=> { %>
                                        <tr class="hover:bg-gray-50/50 transition-colors">
                                            <td class="px-6 py-4">
                                                <div class="flex items-center">
                                                    <div class="h-10 w-10 flex-shrink-0">
                                                        <% const displayImage=(laptop.imageUrls &&
                                                            laptop.imageUrls.length> 0) ? laptop.imageUrls[0] :
                                                            (laptop.imageUrl || 'https://via.placeholder.com/150'); %>
                                                            <img class="h-10 w-10 rounded-lg object-contain border border-gray-100 bg-white"
                                                                src="<%= displayImage %>" alt="">
                                                    </div>
                                                    <div class="ml-4">
                                                        <div class="text-sm font-medium text-gray-900">
                                                            <%= laptop.model %>
                                                        </div>
                                                        <div class="text-xs text-gray-500">
                                                            <%= laptop.brand %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="text-sm text-gray-900 font-semibold">&#8377;<%=
                                                        laptop.price.toLocaleString('en-IN') %>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="flex flex-col gap-1">
                                                    <span
                                                        class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-50 text-blue-700 w-fit">
                                                        <%= laptop.specifications.processor %>
                                                    </span>
                                                    <span class="text-xs text-gray-400">
                                                        <%= laptop.specifications.ram %>
                                                    </span>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4">
                                                <% let statusColor='bg-gray-100 text-gray-800' ; if
                                                    (laptop.status==='In Stock' )
                                                    statusColor='bg-green-100 text-green-800' ; else if
                                                    (laptop.status==='Low Stock' )
                                                    statusColor='bg-yellow-100 text-yellow-800' ; else if
                                                    (laptop.status==='Out of Stock' )
                                                    statusColor='bg-red-100 text-red-800' ; else if
                                                    (laptop.status==='Discontinued' )
                                                    statusColor='bg-gray-100 text-gray-800 border border-gray-300' ; %>
                                                    <div class="flex flex-col gap-1 items-start">
                                                        <span
                                                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= statusColor %>">
                                                            <%= laptop.status || 'In Stock' %>
                                                        </span>
                                                        <span class="text-xs text-gray-500 font-medium ml-1">
                                                            Qty: <%= laptop.stockQuantity || 0 %>
                                                        </span>
                                                    </div>
                                            </td>
                                            <td class="px-6 py-4 text-right text-sm font-medium">
                                                <div class="flex justify-end gap-3">
                                                    <a href="/admin/edit-laptop/<%= laptop._id %>?edit=true"
                                                        class="text-gray-400 hover:text-blue-600 transition-colors">
                                                        <i class="fas fa-pen"></i>
                                                    </a>
                                                    <form action="/admin/delete-laptop" method="POST" class="inline"
                                                        onsubmit="return confirm('Delete this laptop?');">
                                                        <input type="hidden" name="laptopId" value="<%= laptop._id %>">
                                                        <button type="submit"
                                                            class="text-gray-400 hover:text-red-600 transition-colors">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                                                        <i class="fas fa-box-open text-3xl mb-3 text-gray-300"></i>
                                                        <p>No laptops found in inventory.</p>
                                                    </td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <!-- Pagination (Visual only) -->
                    <% if (laptops.length> 0) { %>
                        <div class="px-6 py-4 border-t border-gray-100 flex items-center justify-between">
                            <p class="text-xs text-gray-500">Showing <span class="font-medium">
                                    <%= laptops.length %>
                                </span> items</p>
                            <div class="flex gap-2">
                                <button
                                    class="p-1 rounded text-gray-400 hover:text-gray-600 hover:bg-gray-100 disabled:opacity-50"><i
                                        class="fas fa-chevron-left"></i></button>
                                <button
                                    class="p-1 rounded text-gray-400 hover:text-gray-600 hover:bg-gray-100 disabled:opacity-50"><i
                                        class="fas fa-chevron-right"></i></button>
                            </div>
                        </div>
                        <% } %>
                </div>

                <!-- Right Column: Recent Activity & Quick Actions -->
                <div class="space-y-6">
                    <!-- Recently Added Box -->
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="text-sm font-bold text-gray-900 border-l-4 border-blue-600 pl-3">Recently Added
                            </h3>
                            <a href="#" class="text-xs text-gray-400 hover:text-gray-600">View All</a>
                        </div>
                        <div class="space-y-4">
                            <% if (recentLaptops.length> 0) { %>
                                <% recentLaptops.forEach(laptop=> { %>
                                    <div
                                        class="flex items-center justify-between hover:bg-gray-50 p-2 -mx-2 rounded-lg transition-colors group">
                                        <div class="flex items-center">
                                            <div
                                                class="h-8 w-8 rounded-lg bg-gray-50 border border-gray-100 p-1 flex items-center justify-center">
                                                <% const thumb=(laptop.imageUrls && laptop.imageUrls.length> 0) ?
                                                    laptop.imageUrls[0] : (laptop.imageUrl || ''); %>
                                                    <img src="<%= thumb %>" class="w-full h-full object-contain">
                                            </div>
                                            <div class="ml-3">
                                                <p class="text-sm font-medium text-gray-900 line-clamp-1">
                                                    <%= laptop.model %>
                                                </p>
                                                <p class="text-[10px] text-gray-400">added recently</p>
                                            </div>
                                        </div>
                                        <span
                                            class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-medium bg-blue-50 text-blue-600 group-hover:bg-blue-100 group-hover:text-blue-700 transition-colors">
                                            New
                                        </span>
                                    </div>
                                    <% }) %>
                                        <% } else { %>
                                            <p class="text-xs text-gray-400 text-center py-4">No recent activity</p>
                                            <% } %>
                        </div>
                    </div>

                    <!-- Admin Status Widget -->
                    <div
                        class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-2xl p-6 shadow-lg shadow-blue-200 text-white relative overflow-hidden">
                        <div class="absolute top-0 right-0 p-4 opacity-10">
                            <i class="fas fa-shield-alt text-6xl"></i>
                        </div>

                        <div class="flex items-center justify-between mb-6 relative z-10">
                            <h3 class="font-bold">Admin Status</h3>
                            <i class="fas fa-shield-alt opacity-50"></i>
                        </div>

                        <div class="space-y-4 relative z-10">
                            <div
                                class="flex items-center justify-between text-sm bg-white/10 px-3 py-2 rounded-lg backdrop-blur-sm">
                                <span class="flex items-center gap-2"><i class="fas fa-server text-xs opacity-70"></i>
                                    Server</span>
                                <span
                                    class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-full bg-green-400/20 text-green-100 text-[10px] font-semibold">
                                    <span class="w-1.5 h-1.5 rounded-full bg-green-400 animate-pulse"></span> Running
                                </span>
                            </div>
                            <div
                                class="flex items-center justify-between text-sm bg-white/10 px-3 py-2 rounded-lg backdrop-blur-sm">
                                <span class="flex items-center gap-2"><i class="fas fa-database text-xs opacity-70"></i>
                                    Database</span>
                                <span
                                    class="inline-flex items-center gap-1.5 px-2 py-0.5 rounded-full bg-green-400/20 text-green-100 text-[10px] font-semibold">
                                    Connected
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>

    </html>