<%- include('../partials/head.ejs') %>
<body class="bg-gray-50 font-sans text-gray-700 flex flex-col min-h-screen">
    <%- include('../partials/navbar.ejs') %>

    <main class="flex-grow pt-24 pb-12">
        <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Breadcrumb -->
            <nav class="flex mb-4 text-sm text-gray-500">
                <a href="/" class="hover:text-cyan-600 transition-colors">Home</a>
                <span class="mx-2">/</span>
                <span class="text-gray-800">Blog</span>
            </nav>

            <!-- Header -->
            <header class="mb-8">
                <span class="inline-block bg-cyan-100 text-cyan-800 text-xs font-bold px-2 py-1 rounded mb-4">
                    Tech Insights
                </span>
                <h1 class="text-3xl md:text-5xl font-bold text-gray-900 leading-tight mb-4">
                    <%= blog.title %>
                </h1>
                <div class="flex items-center gap-4 text-sm text-gray-500">
                    <div class="flex items-center gap-2">
                        <div class="w-8 h-8 rounded-full bg-cyan-600 flex items-center justify-center text-white font-bold text-xs">
                            <%= blog.author.charAt(0) %>
                        </div>
                        <span class="font-medium text-gray-900"><%= blog.author %></span>
                    </div>
                    <span>â€¢</span>
                    <time datetime="<%= blog.createdAt.toISOString() %>">
                        <%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                    </time>
                </div>
            </header>

            <!-- Featured Image -->
            <div class="w-full h-[400px] rounded-2xl overflow-hidden mb-10 shadow-lg">
                <img src="<%= blog.imageUrl %>" alt="<%= blog.title %>" class="w-full h-full object-cover">
            </div>

            <!-- Content -->
            <div class="prose prose-lg prose-cyan max-w-none bg-white p-8 md:p-12 rounded-3xl shadow-sm border border-gray-100">
                <div class="blog-content text-gray-800 leading-relaxed">
                    <%- blog.content %>
                </div>
            </div>

            <!-- Share / Navigation -->
            <div class="mt-12 flex justify-between items-center border-t border-gray-200 pt-8">
                <a href="/" class="inline-flex items-center text-cyan-600 font-bold hover:underline">
                    <i class="fas fa-arrow-left mr-2"></i> Back to Home
                </a>
                <div class="flex gap-4">
                    <button class="w-10 h-10 rounded-full bg-blue-600 text-white flex items-center justify-center hover:scale-110 transition-transform"><i class="fab fa-facebook-f"></i></button>
                    <button class="w-10 h-10 rounded-full bg-blue-400 text-white flex items-center justify-center hover:scale-110 transition-transform"><i class="fab fa-twitter"></i></button>
                    <button class="w-10 h-10 rounded-full bg-green-500 text-white flex items-center justify-center hover:scale-110 transition-transform"><i class="fab fa-whatsapp"></i></button>
                </div>
            </div>
        </article>

        <!-- Read More Section -->
        <% if(recentBlogs && recentBlogs.length > 0) { %>
        <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-20">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">More to Read</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <% recentBlogs.forEach(rb => { %>
                <a href="/blog/<%= rb._id %>" class="group block">
                    <div class="relative h-48 rounded-xl overflow-hidden mb-4">
                        <img src="<%= rb.imageUrl %>" alt="<%= rb.title %>" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500">
                    </div>
                    <h3 class="font-bold text-lg text-gray-900 group-hover:text-cyan-600 transition-colors mb-2 line-clamp-2">
                        <%= rb.title %>
                    </h3>
                    <p class="text-gray-500 text-sm line-clamp-2"><%= rb.excerpt %></p>
                </a>
                <% }) %>
            </div>
        </section>
        <% } %>

    </main>

    <%- include('../partials/footer.ejs') %>
</body>
