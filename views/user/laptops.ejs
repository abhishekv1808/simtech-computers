<%- include('../partials/head.ejs') %>


    <body>

        <%- include('../partials/navbar.ejs') %>
        
        <main class="bg-gray-50 min-h-screen pt-4 pb-12">
            
            <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
                
                <!-- Breadcrumb & Header -->
                <div class="flex items-center justify-between mb-6">
                    <nav class="flex text-sm text-gray-500">
                        <a href="/" class="hover:text-emerald-600 transition-colors">Home</a>
                        <span class="mx-2">/</span>
                        <span class="text-gray-900 font-bold">Laptops</span>
                    </nav>

                    <div class="relative">
                        <button class="flex items-center space-x-2 text-sm font-bold text-gray-700 bg-white border border-gray-200 px-4 py-2 rounded-lg hover:border-emerald-500 transition-colors">
                            <span>SORT BY</span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                    </div>
                </div>

                <div class="flex flex-col lg:flex-row gap-8">
                    
                    <!-- SIDEBAR FILTERS -->
                    <aside class="w-full lg:w-[280px] flex-shrink-0 h-fit lg:sticky lg:top-24">
                        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                            <div class="p-4 border-b border-gray-100 flex items-center justify-between">
                                <span class="font-bold text-lg text-gray-900">Filters</span>
                                <button class="text-sm text-emerald-600 font-bold hover:underline">Clear All</button>
                            </div>

                            <!-- Filter: Category -->
                            <div class="p-4 border-b border-gray-100">
                                <button class="flex items-center justify-between w-full font-bold text-gray-800 mb-3 group">
                                    Product Type <i class="fas fa-chevron-up text-xs text-gray-400 group-hover:text-emerald-500"></i>
                                </button>
                                <div class="space-y-2">
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <div class="relative flex items-center">
                                            <input type="checkbox" class="filter-category peer h-5 w-5 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="Standard Laptop">
                                        </div>
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Standard Laptop</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-category rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="Corporate Series">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Corporate Series</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-category rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="Workstation">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Workstation</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-category rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="Gaming">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Gaming</span>
                                    </label>
                                </div>
                            </div>

                            <!-- Filter: Brand -->
                            <div class="p-4 border-b border-gray-100">
                                <button class="flex items-center justify-between w-full font-bold text-gray-800 mb-3 group">
                                    Brand <i class="fas fa-chevron-up text-xs text-gray-400 group-hover:text-emerald-500"></i>
                                </button>
                                <div class="space-y-2">
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-brand rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="Apple">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Apple</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-brand rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="Dell">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Dell</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-brand rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="HP">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">HP</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-brand rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="Lenovo">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Lenovo</span>
                                    </label>
                                </div>
                            </div>

                            <!-- Filter: Processor -->
                            <div class="p-4 border-b border-gray-100">
                                <button class="flex items-center justify-between w-full font-bold text-gray-800 mb-3 group">
                                    Processor <i class="fas fa-chevron-up text-xs text-gray-400 group-hover:text-emerald-500"></i>
                                </button>
                                <div class="space-y-2">
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-processor rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="i3">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Intel Core i3</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-processor rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="i5">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Intel Core i5</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-processor rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="i7">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Intel Core i7</span>
                                    </label>
                                    <label class="flex items-center space-x-3 cursor-pointer group">
                                        <input type="checkbox" class="filter-processor rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 h-5 w-5" value="m_series">
                                        <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">M1 / M2 / M3</span>
                                    </label>
                                </div>
                            </div>

                            <!-- Filter: Price Range -->
                            <div class="p-4">
                                <button class="flex items-center justify-between w-full font-bold text-gray-800 mb-3">
                                    Price Range
                                </button>
                                <div class="px-2">
                                    <input type="range" id="price-range" min="10000" max="250000" step="5000" class="w-full h-1.5 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-emerald-500">
                                    <div class="flex justify-between mt-2 text-sm text-gray-600 font-bold">
                                        <span>₹10k</span>
                                        <span id="price-value">₹2.5L</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </aside>

                    <!-- PRODUCT LIST -->
                    <div class="flex-1">

                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                            
                            <!-- Card 1: Apple -->
                            <div class="product-card bg-white border border-gray-200 rounded-lg p-3 hover:shadow-lg transition-all duration-300 flex flex-col relative group h-full" 
                                 data-category="Standard Laptop" 
                                 data-brand="Apple" 
                                 data-processor="m_series" 
                                 data-price="146999">
                                
                                <!-- Header Badges -->
                                <div class="flex justify-between items-start w-full relative z-10 mb-2">
                                    <div class="bg-gray-900 text-white text-[10px] font-bold px-2 py-0.5 rounded flex items-center gap-1">
                                        <i class="fas fa-check-circle text-emerald-400 text-[10px]"></i>
                                        <span>SIMTECH ASSURED</span>
                                    </div>
                                    <div class="border border-red-500 text-red-500 text-[10px] font-bold px-2 py-0.5 rounded">
                                        1 left
                                    </div>
                                </div>

                                <!-- Image -->
                                <div class="relative w-full h-48 mb-3 flex items-center justify-center bg-gray-50 rounded-lg p-4 overflow-hidden">
                                    <img src="https://images.unsplash.com/photo-1611186871348-b1ce696e52c9?auto=format&fit=crop&q=80&w=500" alt="MacBook Pro" class="max-h-full max-w-full object-contain mix-blend-multiply transition-transform duration-300 group-hover:scale-105">
                                </div>

                                <!-- Discount Tag -->
                                <div class="mb-2">
                                    <span class="bg-green-50 text-emerald-600 text-[10px] font-bold px-1.5 py-0.5 rounded">₹58,000 OFF</span>
                                </div>

                                <!-- Title -->
                                <h3 class="font-bold text-gray-900 text-sm leading-tight mb-2 line-clamp-2 min-h-[40px]">
                                    Apple MacBook Pro 2023 A2992 (Apple M3 Pro Chip 14 Inch)
                                </h3>

                                <!-- Specs -->
                                <div class="flex flex-wrap gap-2 mb-3">
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">M3 Pro</span>
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">18GB RAM</span>
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">512GB SSD</span>
                                </div>

                                <!-- Rating Section -->
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="bg-blue-900 text-white text-[10px] font-bold px-2 py-0.5 rounded">Certified</span>
                                    <div class="border border-gray-200 px-1 py-0.5 rounded flex items-center gap-1">
                                        <span class="text-xs font-bold text-gray-700">5.0</span>
                                        <i class="fas fa-star text-yellow-400 text-[10px]"></i>
                                    </div>
                                </div>

                                <!-- Price Section -->
                                <div class="flex items-center gap-2">
                                    <span class="text-red-500 text-sm font-medium">-28%</span>
                                    <span class="text-lg font-bold text-gray-900">₹1,46,999</span>
                                    <span class="text-xs text-gray-400 line-through text-decoration-line-through decoration-gray-400">₹2,04,999</span>
                                </div>
                            </div>

                            <!-- Card 2: Lenovo -->
                            <div class="product-card bg-white border border-gray-200 rounded-lg p-3 hover:shadow-lg transition-all duration-300 flex flex-col relative group h-full" 
                                 data-category="Corporate Series" 
                                 data-brand="Lenovo" 
                                 data-processor="i7" 
                                 data-price="64999">
                                
                                <!-- Header Badges -->
                                <div class="flex justify-between items-start w-full relative z-10 mb-2">
                                    <div class="bg-gray-900 text-white text-[10px] font-bold px-2 py-0.5 rounded flex items-center gap-1">
                                        <i class="fas fa-check-circle text-emerald-400 text-[10px]"></i>
                                        <span>SIMTECH ASSURED</span>
                                    </div>
                                    <div class="border border-red-500 text-red-500 text-[10px] font-bold px-2 py-0.5 rounded">
                                        2 left
                                    </div>
                                </div>

                                <!-- Image -->
                                <div class="relative w-full h-48 mb-3 flex items-center justify-center bg-gray-50 rounded-lg p-4 overflow-hidden">
                                    <img src="https://images.unsplash.com/photo-1603302576837-37561b2e2302?auto=format&fit=crop&q=80&w=500" alt="ThinkPad X1" class="max-h-full max-w-full object-contain mix-blend-multiply transition-transform duration-300 group-hover:scale-105">
                                </div>

                                <!-- Discount Tag -->
                                <div class="mb-2">
                                    <span class="bg-green-50 text-emerald-600 text-[10px] font-bold px-1.5 py-0.5 rounded">₹45,000 OFF</span>
                                </div>

                                <!-- Title -->
                                <h3 class="font-bold text-gray-900 text-sm leading-tight mb-2 line-clamp-2 min-h-[40px]">
                                    Lenovo ThinkPad X1 Carbon Gen 9 (Intel i7 11th Gen)
                                </h3>

                                <!-- Specs -->
                                <div class="flex flex-wrap gap-2 mb-3">
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">Core i7</span>
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">16GB RAM</span>
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">1TB SSD</span>
                                </div>

                                <!-- Rating Section -->
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="bg-blue-900 text-white text-[10px] font-bold px-2 py-0.5 rounded">Corporate</span>
                                    <div class="border border-gray-200 px-1 py-0.5 rounded flex items-center gap-1">
                                        <span class="text-xs font-bold text-gray-700">4.8</span>
                                        <i class="fas fa-star text-yellow-400 text-[10px]"></i>
                                    </div>
                                </div>

                                <!-- Price Section -->
                                <div class="flex items-center gap-2">
                                    <span class="text-red-500 text-sm font-medium">-41%</span>
                                    <span class="text-lg font-bold text-gray-900">₹64,999</span>
                                    <span class="text-xs text-gray-400 line-through text-decoration-line-through decoration-gray-400">₹1,10,000</span>
                                </div>
                            </div>

                            <!-- Card 3: Dell -->
                            <div class="product-card bg-white border border-gray-200 rounded-lg p-3 hover:shadow-lg transition-all duration-300 flex flex-col relative group h-full" 
                                 data-category="Workstation" 
                                 data-brand="Dell" 
                                 data-processor="i9" 
                                 data-price="89999">
                                
                                <!-- Header Badges -->
                                <div class="flex justify-between items-start w-full relative z-10 mb-2">
                                    <div class="bg-gray-900 text-white text-[10px] font-bold px-2 py-0.5 rounded flex items-center gap-1">
                                        <i class="fas fa-check-circle text-emerald-400 text-[10px]"></i>
                                        <span>SIMTECH ASSURED</span>
                                    </div>
                                    <div class="border border-red-500 text-red-500 text-[10px] font-bold px-2 py-0.5 rounded">
                                        1 left
                                    </div>
                                </div>

                                <!-- Image -->
                                <div class="relative w-full h-48 mb-3 flex items-center justify-center bg-gray-50 rounded-lg p-4 overflow-hidden">
                                    <img src="https://images.unsplash.com/photo-1593642702821-c8da6771f0c6?auto=format&fit=crop&q=80&w=500" alt="Dell Precision" class="max-h-full max-w-full object-contain mix-blend-multiply transition-transform duration-300 group-hover:scale-105">
                                </div>

                                <!-- Discount Tag -->
                                <div class="mb-2">
                                    <span class="bg-green-50 text-emerald-600 text-[10px] font-bold px-1.5 py-0.5 rounded">₹30,000 OFF</span>
                                </div>

                                <!-- Title -->
                                <h3 class="font-bold text-gray-900 text-sm leading-tight mb-2 line-clamp-2 min-h-[40px]">
                                    Dell Precision 5550 (Intel Core i9 10th Gen)
                                </h3>

                                <!-- Specs -->
                                <div class="flex flex-wrap gap-2 mb-3">
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">Core i9</span>
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">32GB RAM</span>
                                    <span class="bg-gray-100 text-gray-600 text-[10px] font-medium px-2 py-1 rounded">1TB SSD</span>
                                </div>

                                <!-- Rating Section -->
                                <div class="flex items-center gap-2 mb-3">
                                    <span class="bg-blue-900 text-white text-[10px] font-bold px-2 py-0.5 rounded">Workstation</span>
                                    <div class="border border-gray-200 px-1 py-0.5 rounded flex items-center gap-1">
                                        <span class="text-xs font-bold text-gray-700">4.7</span>
                                        <i class="fas fa-star text-yellow-400 text-[10px]"></i>
                                    </div>
                                </div>

                                <!-- Price Section -->
                                <div class="flex items-center gap-2">
                                    <span class="text-red-500 text-sm font-medium">-30%</span>
                                    <span class="text-lg font-bold text-gray-900">₹89,999</span>
                                    <span class="text-xs text-gray-400 line-through text-decoration-line-through decoration-gray-400">₹1,19,999</span>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../partials/footer.ejs') %>

    </body>
</html>