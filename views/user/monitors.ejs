<%- include('../partials/head.ejs') %>

<body>

    <%- include('../partials/navbar.ejs') %>
    
    <main class="bg-gray-50 min-h-screen pt-4 pb-12">
        
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <!-- Breadcrumb & Header -->
            <div class="flex items-center justify-between mb-8 pt-4">
                <nav class="flex text-sm text-gray-500">
                    <a href="/" class="hover:text-emerald-600 transition-colors">Home</a>
                    <span class="mx-2">/</span>
                    <span class="text-gray-900 font-bold">Monitors</span>
                </nav>

                <div class="relative">
                    <button class="flex items-center space-x-2 text-sm font-bold text-gray-700 bg-white border border-gray-200 px-4 py-2 rounded-xl hover:border-emerald-500 transition-colors">
                        <span>SORT BY</span>
                        <i class="fas fa-chevron-down text-xs"></i>
                    </button>
                </div>
            </div>

            <div class="flex flex-col lg:flex-row gap-8">
                
                <!-- SIDEBAR FILTERS -->
                <aside class="w-full lg:w-[280px] flex-shrink-0 h-fit lg:sticky lg:top-24">
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                        <div class="p-4 border-b border-gray-100 flex items-center justify-between">
                            <span class="font-bold text-lg text-gray-900">Filters</span>
                            <button class="text-sm text-emerald-600 font-bold hover:underline">Clear All</button>
                        </div>

                        <!-- Filter: Type -->
                        <div class="p-4 border-b border-gray-100">
                            <button class="flex items-center justify-between w-full font-bold text-gray-800 mb-3 group">
                                Category <i class="fas fa-chevron-up text-xs text-gray-400 group-hover:text-emerald-500"></i>
                            </button>
                            <div class="space-y-2">
                                <label class="flex items-center space-x-3 cursor-pointer group">
                                    <div class="relative flex items-center">
                                        <input type="checkbox" class="filter-category peer h-4 w-4 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="Gaming">
                                    </div>
                                    <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Gaming</span>
                                </label>
                                <label class="flex items-center space-x-3 cursor-pointer group">
                                    <input type="checkbox" class="filter-category peer h-4 w-4 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="Professional">
                                    <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Professional</span>
                                </label>
                                <label class="flex items-center space-x-3 cursor-pointer group">
                                    <input type="checkbox" class="filter-category peer h-4 w-4 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="Office">
                                    <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Daily Use</span>
                                </label>
                            </div>
                        </div>

                        <!-- Filter: Brand -->
                        <div class="p-4 border-b border-gray-100">
                            <button class="flex items-center justify-between w-full font-bold text-gray-800 mb-3 group">
                                Brand <i class="fas fa-chevron-up text-xs text-gray-400 group-hover:text-emerald-500"></i>
                            </button>
                            <div class="space-y-2">
                                <label class="flex items-center space-x-3 cursor-pointer group">
                                    <input type="checkbox" class="filter-brand h-4 w-4 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="Dell">
                                    <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Dell</span>
                                </label>
                                <label class="flex items-center space-x-3 cursor-pointer group">
                                    <input type="checkbox" class="filter-brand h-4 w-4 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="HP">
                                    <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">HP</span>
                                </label>
                                <label class="flex items-center space-x-3 cursor-pointer group">
                                    <input type="checkbox" class="filter-brand h-4 w-4 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="Lenovo">
                                    <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">Lenovo</span>
                                </label>
                                <label class="flex items-center space-x-3 cursor-pointer group">
                                    <input type="checkbox" class="filter-brand h-4 w-4 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="BenQ">
                                    <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">BenQ</span>
                                </label>
                                <label class="flex items-center space-x-3 cursor-pointer group">
                                    <input type="checkbox" class="filter-brand h-4 w-4 rounded border-gray-300 text-emerald-500 focus:ring-emerald-500 transition-all checked:bg-emerald-500 checked:border-emerald-500" value="LG">
                                    <span class="text-sm text-gray-600 group-hover:text-emerald-600 transition-colors font-medium">LG</span>
                                </label>
                            </div>
                        </div>

                        <!-- Price Range -->
                        <div class="p-4">
                             <button class="flex items-center justify-between w-full font-bold text-gray-800 mb-3 group">
                                Price Range <i class="fas fa-chevron-up text-xs text-gray-400 group-hover:text-emerald-500"></i>
                            </button>
                            <input type="range" class="w-full h-1 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-emerald-500">
                            <div class="flex justify-between text-xs text-gray-500 mt-2">
                                <span>₹2K</span>
                                <span>₹50K+</span>
                            </div>
                        </div>
                    </div>
                </aside>

                <!-- PRODUCTS GRID -->
                <div class="flex-1">
                    
                    <% if(monitors.length > 0) { %>
                        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                            <% monitors.forEach(monitor => { %>
                                <div class="group bg-white rounded-2xl border border-gray-100 p-4 hover:shadow-lg transition-all duration-300 hover:-translate-y-1 flex flex-col">
                                    <!-- Header -->
                                    <div class="flex justify-between items-start mb-4">
                                        <% 
                                            let tagClass = 'bg-gray-100 text-gray-600 border-gray-200';
                                            let tagName = 'MONITOR';
                                            // Simple logic to add tag based on price or keywords, or use DB field later
                                            if(monitor.price > 15000) { tagClass = 'bg-purple-50 text-purple-600 border-purple-100'; tagName = 'PREMIUM'; }
                                            else if(monitor.price < 8000) { tagClass = 'bg-emerald-50 text-emerald-600 border-emerald-100'; tagName = 'VALUE'; }
                                            else { tagClass = 'bg-blue-50 text-blue-600 border-blue-100'; tagName = 'OFFICE'; }
                                        %>
                                        <span class="<%= tagClass %> border text-[10px] font-bold px-2 py-1 rounded uppercase tracking-wider">
                                            <%= tagName %>
                                        </span>
                                        <button class="w-8 h-8 rounded-full bg-gray-50 flex items-center justify-center text-gray-400 hover:bg-red-50 hover:text-red-500 transition-colors">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    </div>
        
                                    <!-- Image (Link to Detail) -->
                                    <a href="/monitor/<%= monitor._id %>" class="relative aspect-[4/3] w-full mb-4 overflow-hidden rounded-xl bg-gray-50 block">
                                        <img src="<%= (monitor.imageUrls && monitor.imageUrls.length > 0) ? monitor.imageUrls[0] : '/images/default-monitor.png' %>" 
                                             alt="<%= monitor.brand %> <%= monitor.model %>" 
                                             class="w-full h-full object-contain p-4 mix-blend-multiply group-hover:scale-105 transition-transform duration-500">
                                    </a>
        
                                    <!-- Content -->
                                    <div class="mt-auto">
                                        <p class="text-xs text-emerald-600 font-bold uppercase tracking-wide mb-1"><%= monitor.brand %></p>
                                        <a href="/monitor/<%= monitor._id %>" class="block">
                                            <h3 class="text-gray-900 font-bold text-lg leading-tight mb-2 truncate group-hover:text-emerald-600 transition-colors" title="<%= monitor.model %>"><%= monitor.model %></h3>
                                        </a>
                                        
                                        <div class="flex flex-wrap gap-2 mb-4">
                                            <% if(monitor.specifications.display) { %>
                                                <span class="text-[10px] text-gray-500 bg-gray-50 px-2 py-1 rounded border border-gray-100"><%= monitor.specifications.display %></span>
                                            <% } %>
                                            <% if(monitor.specifications.os && monitor.specifications.os !== 'N/A') { %>
                                                <span class="text-[10px] text-gray-500 bg-gray-50 px-2 py-1 rounded border border-gray-100"><%= monitor.specifications.os %></span>
                                            <% } %>
                                            <span class="text-[10px] text-gray-500 bg-gray-50 px-2 py-1 rounded border border-gray-100">Refurbished</span>
                                        </div>
        
                                        <div class="flex items-end justify-between pt-4 border-t border-gray-50">
                                            <div>
                                                <p class="text-xs text-gray-400 line-through">₹<%= monitor.mrp.toLocaleString('en-IN') %></p>
                                                <p class="text-xl font-bold text-gray-900">₹<%= monitor.price.toLocaleString('en-IN') %></p>
                                            </div>
                                            <form action="/cart" method="POST" class="inline-block">
                                                <input type="hidden" name="productId" value="<%= monitor._id %>">
                                                <button type="submit" class="w-10 h-10 rounded-xl bg-gray-900 text-white flex items-center justify-center hover:bg-emerald-600 transition-colors shadow-lg shadow-gray-200" title="Add to Cart">
                                                    <i class="fas fa-shopping-cart text-sm"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <!-- Empty State -->
                        <div class="flex flex-col items-center justify-center py-20 bg-white rounded-3xl border border-gray-100 text-center">
                            <div class="w-20 h-20 bg-gray-50 rounded-full flex items-center justify-center mb-6">
                                <i class="fas fa-desktop text-3xl text-gray-300"></i>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-2">No Monitors Found</h3>
                            <p class="text-gray-500 max-w-sm mx-auto mb-8">We couldn't find any monitors matching your selection. Please try checking back later.</p>
                            <a href="/" class="bg-gray-900 text-white px-8 py-3 rounded-xl font-bold hover:bg-emerald-600 transition-colors">
                                Go Back Home
                            </a>
                        </div>
                    <% } %>

                    <!-- Pagination (Static for now) -->
                    <% if(monitors.length > 0) { %>
                    <div class="mt-12 flex justify-center gap-2">
                        <button class="w-10 h-10 rounded-lg bg-emerald-600 text-white font-bold flex items-center justify-center">1</button>
                        <button class="w-10 h-10 rounded-lg bg-white border border-gray-200 text-gray-700 font-bold flex items-center justify-center hover:bg-gray-50 transition-colors">2</button>
                        <button class="w-10 h-10 rounded-lg bg-white border border-gray-200 text-gray-700 font-bold flex items-center justify-center hover:bg-gray-50 transition-colors"><i class="fas fa-chevron-right text-xs"></i></button>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>
